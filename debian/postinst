#!/bin/sh
# postinst script for powerpc-wrs-vxworks-wrs-ip
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PREFIX="/usr"
WIND_BASE="$PREFIX/powerpc-wrs-vxworks/wind_base"
TOOL_DIR="$PREFIX/powerpc-wrs-vxworks"
TMPDIR="/tmp"

case "$1" in
    configure)
		#Follow debian policy: instead of overwrite, die.
		if [ \( -e "$TMPDIR/gccdist.zip" \) -o \( -e "$TMPDIR/gccdist" \) ]
		then
			echo "powerpc-wrs-vxworks-wrs-ip: $TMPDIR dirty from an incomplete installation"
			echo "    Make sure no processes are using $TMPDIR/gccdist.zip and $TMPDIR/gccdist,"
			echo "    and then remove these files.  Aborting install."
			exit 1
		fi
		
		#create directories
		mkdir -p "$WIND_BASE"
		mkdir -p "$TOOL_DIR"
		mkdir -p "$WIND_BASE/target"

		#download gccdist and unzip
		wget "ftp://ftp.ni.com/pub/devzone/tut/updated_vxworks63gccdist.zip" -O "$TMPDIR/gccdist.zip"
		unzip -qo "$TMPDIR/gccdist.zip" -d "$TMPDIR"

		#copy scripts to proper location
		cp -R "$TMPDIR/gccdist/WindRiver/vxworks-6.3/host" "$WIND_BASE/host"
		#copy headers to proper location
		cp -R "$TMPDIR/gccdist/WindRiver/vxworks-6.3/target/h" "$TOOL_DIR/sys-include"
		#make symlink to headers
		ln -s "$TOOL_DIR/sys-include" "$WIND_BASE/target/h"
		rm -rf "$TMPDIR/gccdist.zip" "$TMPDIR/gccdist"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
